<div class="row">
    {{#pix}} i/publish, core {{/pix}}
    {{#pendingpublication}}
        <a href="{{wwwroot}}/blocks/edupublisher/pages/publish.php?sourcecourseid={{pendingpublication}}">
            {{#str}} publish_new_package_proceed, block_edupublisher {{/str}}
        </a>
    {{/pendingpublication}}
    {{^pendingpublication}}
        <a href="{{wwwroot}}/blocks/edupublisher/pages/publish.php?sourcecourseid={{courseid}}">
            {{#str}} publish_new_package, block_edupublisher {{/str}}
        </a>
    {{/pendingpublication}}
</div>

{{#haspackages}}
    <div class="row">
        <strong>{{#str}} parts_published, block_edupublisher {{/str}}</strong>
    </div>
    {{#packages}}
        <div class="row">
            {{#pix}} i/edit, core {{/pix}}
            <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}">
                {{#shortentext}} 25, {{{title}}} {{/shortentext}}
            </a>
        </div>
    {{/packages}}
{{/haspackages}}

{{#hasuses}}
    <div class="row">
        <strong>{{#str}} parts_based_upon, block_edupublisher {{/str}}</strong>
    </div>
    {{#uses}}
        <div class="row">
            {{#pix}} i/withsubcat, core {{/pix}}
            <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}">
                {{#shortentext}} 25, {{title}} {{/shortentext}}
            </a>
        </div>
    {{/uses}}
{{/hasuses}}
