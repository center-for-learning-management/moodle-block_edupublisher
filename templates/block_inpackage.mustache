<div class="row">
    <div class="col-md-12">
        <i class="fa fa-envelope icon"></i>
        {{#default_authormailshow}}
        <a href="mailto:{{default_authormail}}">
            {{default_authorname}}
        </a>
        {{/default_authormailshow}}
        {{^default_authormailshow}}
            {{default_authorname}}
        {{/default_authormailshow}}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a>
            <i class="fa fa-clipboard icon"></i>
            {{default_licence}}
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}">
            <i class="fa fa-eye icon"></i>
            {{#str}} details, block_edupublisher {{/str}}
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="{{wwwroot}}/blocks/edupublisher/pages/comment.php?packageid={{id}}">
            <i class="fa fa-comments icon"></i>
            {{#str}} comments {{/str}}
        </a>
    </div>
</div>
{{#show_star_rating}}
    <div class="row">
        <div class="col-md-12">
            <a>
                <i class="fa fa-line-chart icon"></i>
            </a>
            {{>block_edupublisher/package_rating}}
        </div>
    </div>
{{/show_star_rating}}
{{#can_see_evaluation}}
<div class="row">
    <div class="col-md-12">
        <a href="{{wwwroot}}/blocks/edupublisher/pages/evaluation.php?packageid={{id}}">
            <i class="fa fa-area-chart icon"></i>
            {{#str}} evaluations, block_edupublisher {{/str}}
        </a>
    </div>
</div>
{{/can_see_evaluation}}
{{#can_import}}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <a href="#" onclick="require(['block_edupublisher/main'], function(MAIN) { MAIN.initImportSelection({{id}}, 0, {{allow_subcourses}}); }); return false;"
           class="btn btn-primary btn-block" style="margin-top: 10px;">
           {{#str}} initialize_import, block_edupublisher {{/str}}
        </a>
    </div>
</div>
{{/can_import}}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <a href="{{wwwroot}}/blocks/edupublisher/pages/groups.php?id={{id}}" class="btn btn-primary btn-block">
            {{#str}} groups:create, block_edupublisher {{/str}}
        </a>
    </div>
</div>
{{#can_unenrol}}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <a href="{{wwwroot}}/blocks/edupublisher/pages/self_enrol.php?id={{course}}&unenrol=1" class="btn btn-primary btn-block">
            {{#str}} self_unenrol, block_edupublisher {{/str}}
        </a>
    </div>
</div>
{{/can_unenrol}}
{{#etapas_graphic}}
<div class="row">
    <div class="col-md-12">
        <a>
            <img src="{{wwwroot}}/blocks/edupublisher/pix/channel/{{etapas_graphic}}.png"
                 style="width: 100%; max-width: 170px; margin-top: 20px;">
        </a>
    </div>
</div>
{{/etapas_graphic}}
