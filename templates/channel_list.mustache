<h3>{{#str}} channels, block_edupublisher {{/str}}</h3>
<table border="0" width="100%">
    <thead>
        <tr>
            <th>{{#str}} name, block_edupublisher {{/str}}</th>
            <th>{{#str}} action, block_edupublisher {{/str}}</th>
        </tr>
    </thead>
    <tbody>
{{#channels}}
        <tr>
            <td>{{title}}</td>
            <td>
                {{#actions}}
                    <a href="{{url}}"><img src="{{picture}}" alt="{{label}}" width="24" /></a>
                {{/actions}}
            </td>
        </tr>
{{/channels}}
    </tbody>
</table>

<h3>{{#str}} create_channel, block_edupublisher {{/str}}</h3>
<form action="{{wwwroot}}/blocks/edupublisher/pages/channels.php" method="post" enctype="multipart/form-data">
    <input type="hidden" name="action" value="create" />
    <input class="form-control" type="text" name="title" placeholder="{{#str}} title, block_edupublisher {{/str}}" />
    <input class="btn btn-primary" type="submit" value="{{#str}} create_channel, block_edupublisher {{/str}}" />
</form>
