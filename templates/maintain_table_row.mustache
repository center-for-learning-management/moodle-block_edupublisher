<tr class="{{#exclamation}} exclamation {{/exclamation}}">
    <td>
        {{#exclamation}}
            <i class="fa fa-exclamation"></i>
        {{/exclamation}}
    </td>
    <td>
        {{#hasexacompsourceids}}
            <i class="fa fa-certificate" style="color: green;"
               title="{{#str}} competencies, competency {{/str}}"></i>
        {{/hasexacompsourceids}}
        {{^hasexacompsourceids}}
            <i class="fa fa-certificate" style="color: darkred;"
               title="{{#str}} competencies, competency {{/str}}"></i>
        {{/hasexacompsourceids}}
    </td>
    <td>
        {{#authoreditingpermission}}
            <i class="fa fa-unlock"></i>
        {{/authoreditingpermission}}
        {{^authoreditingpermission}}
            <i class="fa fa-lock"></i>
        {{/authoreditingpermission}}
    </td>
    <td>
        <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}">
            <img src="{{default_image}}" alt="{{title}}" style="width: 40px;"/>
        </a>
    </td>
    <td>
        <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}">
            {{title}}
        </a>
        (<i>{{default_authorname}}</i>)
    </td>
    <td>
        {{#default_publishas}} {{#pix}} i/completion-auto-y, core, requested publishing {{/pix}} {{/default_publishas}}
        {{^default_publishas}} {{#pix}} i/completion-auto-fail, core, NO require publishing {{/pix}} {{/default_publishas}}
    </td>
    <td>
        {{#default_published}} {{#pix}} i/completion-auto-pass, core, is published {{/pix}} {{/default_published}}
        {{^default_published}} {{#pix}} i/completion-auto-fail, core, is NOT published {{/pix}} {{/default_published}}
    </td>
    <td>
        {{#etapas_publishas}} {{#pix}} i/completion-auto-y, core, requested publishing {{/pix}} {{/etapas_publishas}}
        {{^etapas_publishas}} {{#pix}} i/completion-auto-fail, core, NO require publishing {{/pix}} {{/etapas_publishas}}
    </td>
    <td>
        {{#etapas_published}} {{#pix}} i/completion-auto-pass, core, is published {{/pix}} {{/etapas_published}}
        {{^etapas_published}} {{#pix}} i/completion-auto-fail, core, is NOT published {{/pix}} {{/etapas_published}}
    </td>
    <td>
        {{#eduthek_publishas}} {{#pix}} i/completion-auto-y, core, requested publishing {{/pix}} {{/eduthek_publishas}}
        {{^eduthek_publishas}} {{#pix}} i/completion-auto-fail, core, NO require publishing {{/pix}} {{/eduthek_publishas}}
    </td>
    <td>
        {{#eduthek_published}} {{#pix}} i/completion-auto-pass, core, is published {{/pix}} {{/eduthek_published}}
        {{^eduthek_published}} {{#pix}} i/completion-auto-fail, core, is NOT published {{/pix}} {{/eduthek_published}}
    </td>
    <td>
        {{> block_edupublisher/package_rating }}
    </td>
</tr>
