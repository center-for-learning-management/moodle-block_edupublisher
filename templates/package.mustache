            <a href="{{wwwroot}}/blocks/edupublisher/pages/package.php?id={{id}}&act=authoreditingpermission&to=grant" class="ui-btn btn btn-primary">{{#str}} trigger_editing_permission_grant, block_edupublisher {{/str}}</a>
