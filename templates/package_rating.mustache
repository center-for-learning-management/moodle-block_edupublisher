<div style="display: inline-block; width: 125px;">
{{#canrate}}
    {{#ratingselection}}
        <a href="#" onclick="require(['block_edupublisher/main'], function(MAIN) { MAIN.triggerRating('{{uniqid}}', {{id}}, {{num}}); }); return false;"><img src="{{wwwroot}}/blocks/edupublisher/pix/star_{{active}}_{{selected}}.png" alt="{{num}}" class="icon" id="{{uniqid}}-rating-{{num}}" style="margin-right: 0;" /></a>
    {{/ratingselection}}
    {{!ratingaverage}}
    {{#showpreviewbutton}}
        {{! local_eduvidual is a specific plugin for www.eduvidual.at. This code is for a special purpose, but the plugin also works without it. }}
        <a href="{{wwwroot}}/course/view.php?id={{course}}" onclick="if (window.self !== window.top) { require(['local_eduvidual/jquery-ba-postmessage'], function(POST) { POST.post('noback|open_preview|{{course}}'); }); } else { window.open(this.href, '_system'); } return false;" class="btn btn-primary">{{#str}} preview {{/str}}</a>
    {{/showpreviewbutton}}
    <!--
    {{^showpreviewbutton}}
        <br /><span id="{{uniqid}}-ratingcount">{{ratingcount}}</span> {{#str}} votes, block_edupublisher {{/str}}
    {{/showpreviewbutton}}
    -->
{{/canrate}}
{{^canrate}}
    {{#ratingselection}}
        <a onclick="return false;"><img src="{{wwwroot}}/blocks/edupublisher/pix/star_{{active}}_{{selected}}.png" alt="{{num}}" class="icon" style="margin-right: 0;" /></a>
    {{/ratingselection}}
    {{#showpreviewbutton}}
        {{! local_eduvidual is a specific plugin for www.eduvidual.at. This code is for a special purpose, but the plugin also works without it. }}
        <a href="{{wwwroot}}/course/view.php?id={{course}}" onclick="if (window.self !== window.top) { require(['local_eduvidual/jquery-ba-postmessage'], function(POST) { POST.post('noback|open_preview|{{course}}'); }); } else { window.open(this.href, '_system'); } return false;" target="_blank" class="btn btn-primary">{{#str}} preview {{/str}}</a>
    {{/showpreviewbutton}}
    <!--
    {{^showpreviewbutton}}
        <br /><span id="{{uniqid}}-ratingcount">{{ratingcount}}</span> {{#str}} votes, block_edupublisher {{/str}}
    {{/showpreviewbutton}}
    -->
{{/canrate}}
</div>
{{#ratingshowcount}}
    {{ratingaverage}} | {{ratingcount}}
{{/ratingshowcount}}
