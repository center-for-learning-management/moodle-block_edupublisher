<div class="ui-edupublisher"><div>
{{#header}}
    <table border="0" width="100%">
        <tr>
            <td width="50" align="center">
                {{#str}} active {{/str}}
            </td>
            <td>
                {{#str}} name {{/str}}
            </td>
            <td>
                {{#str}} email {{/str}}
            </td>
            <td width="50" align="center">
                {{#str}} edit {{/str}}
            </td>
        </tr>
    </table>
{{/header}}
{{^header}}
    <form id="publisher-{{id}}" data-uniqid="{{uniqid}}" class="edupublisher-publishers">
        <input type="hidden" id="id-{{uniqid}}" value="{{id}}" />
        <table border="0" width="100%">
            <tr>
                <td width="50" align="center">
                    <input type="checkbox" id="active-{{uniqid}}" {{#active}} checked="checked" {{/active}}
                           onchange="var inp = this; require(['block_edupublisher/main'], function(MAIN) { MAIN.storePublisher('{{uniqid}}', inp); });"/>
                </td>
                <td>
                    <input type="text" id="name-{{uniqid}}" value="{{name}}" placeholder="{{#str}} name {{/str}}"
                           onblur="var inp = this; require(['block_edupublisher/main'], function(MAIN) { MAIN.storePublisher('{{uniqid}}', inp); });" />
                </td>
                <td>
                    <input type="text" id="mail-{{uniqid}}" value="{{mail}}" placeholder="{{#str}} email {{/str}}"
                           onblur="var inp = this; require(['block_edupublisher/main'], function(MAIN) { MAIN.storePublisher('{{uniqid}}', inp); });" />
                </td>
                <td width="50" align="center" id="edit-{{uniqid}}">
                    <a href="/blocks/edupublisher/pages/publishers.php?id={{id}}" {{^id}} style="opacity: 0;"{{/id}}>
                        {{#pix}} i/edit, core {{/pix}}
                    </a>
                    <a href="/blocks/edupublisher/pages/licence.php?publisherid={{id}}" {{^id}} style="opacity: 0;"{{/id}}>
                        {{#pix}} i/grades, core, licences {{/pix}}
                    </a>
                </td>
            </tr>
        </table>
    </form>
{{/header}}
</div></div>
